{
  // VS CODE LAUNCH CONFIGURATION FOR ELECTRON FORGE PROJECT
  // PURPOSE: Enables comprehensive debugging capabilities for both Electron main and renderer
  // processes, with configurable ports and environments
  // SECURITY IMPACT FOR DEVELOPERS: Potentially Significant - Intentionally opens debug ports
  // (9222, 9333, 9444, 9555) locally and grants execution control, but only when debugging is explicitly
  // activated through VS Code's Run & Debug functionality (F5)
  // SECURITY IMPACT FOR APPLICATION END-USERS: Minimal - These configurations should have no
  // impact on compiled applications as launch.json is strictly a VS Code development configuration
  // file that is never included in builds distributed to end-users

  "version": "0.2.0",

  // User configurable options for debugging flexibility
  "inputs": [
    {
      "id": "debugPort",
      "type": "pickString",
      "default": "9222", // Standard Chrome DevTools protocol port
      "description": "Port for renderer process debugging",
      "options": ["9222", "9333", "9444", "9555"]
    },
    {
      "id": "nodeEnv",
      "type": "pickString",
      "default": "development",
      "description": "Node environment",
      "options": ["development", "staging", "production"]
    }
  ],

  "configurations": [
    {
      // Main process debugging configuration
      "name": "Debug Main Process",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
      "windows": {
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
      },
      "args": [".", "--remote-debugging-port=${input:debugPort}"],
      "env": {
        "NODE_ENV": "${input:nodeEnv}"
      },
      "preLaunchTask": "npm: build-dev",
      "outputCapture": "std",
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**/*",
        "!**/node_modules/**"
      ],
      "console": "integratedTerminal",
      "autoAttachChildProcesses": true,
      "restart": true
    },
    {
      // Renderer process debugging configuration
      "name": "Debug Renderer Process",
      "type": "chrome",
      "request": "attach",
      "port": "${input:debugPort}",
      "webRoot": "${workspaceFolder}",
      "timeout": 60000,
      "restart": true,
      "sourceMapPathOverrides": {
        "webpack:///./~/*": "${workspaceFolder}/node_modules/*",
        "webpack:///./*": "${workspaceFolder}/*",
        "webpack:///*": "*"
      }
    }
  ],

  "compounds": [
    {
      // Combined configuration for debugging both processes
      "name": "Debug All Processes",
      "configurations": ["Debug Main Process", "Debug Renderer Process"],
      "stopAll": true,
      "presentation": {
        "group": "electron",
        "order": 1
      }
    }
  ]
}
